<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="371dp"
        android:layout_height="54dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/budgetbee"
        android:textColor="#FF007F"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="317dp"
        android:layout_height="99dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181">


        <Button
            android:id="@+id/sdDownloads"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#006400"
            android:fontFamily="self-monospace"
            android:text="Resources"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/Budget"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#006400"
            android:fontFamily="self-monospace"
            android:text="@string/budget"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/Spent"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#006400"
            android:fontFamily="self-monospace"
            android:text="@string/spent"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="174dp"
        android:layout_height="36dp"
        android:text="@string/moneyremaining"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="@color/material_dynamic_neutral_variant100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />

    <TextView
        android:id="@+id/ViewIncome"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text=""
        android:textColor="#FF007F"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />

    <TextView
        android:id="@+id/ViewRemaining"
        android:layout_width="199dp"
        android:layout_height="36dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />


</androidx.constraintlayout.widget.ConstraintLayout>